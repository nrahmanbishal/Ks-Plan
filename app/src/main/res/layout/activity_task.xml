<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#9F4CBEF3"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/logo_clear">
            </ImageView>
            <TextView
                android:id="@+id/tv_datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Datum: ">
            </TextView>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_datum"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="29.11.2020" />
            <RelativeLayout
                android:id="@+id/layout_30day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_date"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_30day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:text="letzte: 30 Tage">
                </TextView>
                <ProgressBar
                    android:id="@+id/pb_last30"
                    android:layout_below="@id/tv_30day"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:hapticFeedbackEnabled="true"
                    android:progress="50"
                    android:progressDrawable="@drawable/point_default_progess"
                    android:scaleY="1.0"/>
                <TextView
                    android:id="@+id/tv_progress_percent_30day"
                    android:layout_below="@id/tv_30day"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="#000"
                    android:text="50%">
                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_7day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_date"
                android:layout_toRightOf="@id/layout_30day"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_7day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:text="letzte: 7 Tage">
                </TextView>
                <ProgressBar
                    android:id="@+id/pb_last7"
                    android:layout_below="@id/tv_7day"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:hapticFeedbackEnabled="true"
                    android:progress="25"
                    android:progressDrawable="@drawable/point_default_progess"
                    android:scaleY="1.0"/>
                <TextView
                    android:id="@+id/tv_progress_percent_7day"
                    android:layout_below="@id/tv_7day"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="#000"
                    android:text="25%">
                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_date"
                android:layout_toRightOf="@id/layout_7day"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:text="letzte: 7 Tage">
                </TextView>
                <ProgressBar
                    android:id="@+id/pb_daily"
                    android:layout_below="@id/tv_daily"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:hapticFeedbackEnabled="true"
                    android:progress="75"
                    android:progressDrawable="@drawable/point_default_progess"
                    android:scaleY="1.0"/>
                <TextView
                    android:id="@+id/tv_progress_percent_daily"
                    android:layout_below="@id/tv_daily"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="#000"
                    android:text="75%">
                </TextView>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.6"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:background="@android:color/white"
                tools:listitem="@layout/task_item_single">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="#9F4CBEF3"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_edit"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="28dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#ffffff"
                android:background="@drawable/my_button_rounded"
                android:text="Einstellungen"/>
            <Button
                android:id="@+id/btn_date"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="28dp"
                android:textColor="#ffffff"
                android:background="@drawable/my_button_rounded"
                android:text="Datum"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>